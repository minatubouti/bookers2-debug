<h2>Book search for "test"</h2>

<table class="table table-hover table-inverse">
    
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
  
   <tbody>
     <% @users.each do |user| %>
     <tr>
       <td><%= user.name %></td>
     </tr>
     <% end %>
  <% else %>  <!--検索対象がUserでない時-->
  <!--検索対象モデルがBookの時-->
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
   
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
  <% end %>
 </table>